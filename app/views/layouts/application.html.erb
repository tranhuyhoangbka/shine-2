<!DOCTYPE html>
<html>
  <head>
    <title>Shine</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= javascript_include_tag *webpack_asset_paths("application") %>
    <% if @base_url %>
      <base href="<%= @base_url %>">
    <% end %>
  </head>

  <body class="container">
    <%= render "shared/messages" %>
    <%= yield %>
  </body>
</html>
